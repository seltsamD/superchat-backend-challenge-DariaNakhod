<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="1" author="Test">
        <createTable tableName="Message">
            <column name="MessageID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="ContactID" type="BIGINT"/>
            <column name="Body" type="varchar(7000)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Test">
        <addForeignKeyConstraint
                baseTableName="Message"
                baseColumnNames="ContactID"
                constraintName="FK_Message_ContactID"
                referencedTableName="Contact"
                referencedColumnNames="ContactID"/>
    </changeSet>

</databaseChangeLog>